<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>ParcelExpress</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>ParcelExpress</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<!-- Permissions: Location (Geolocator/Geocoding/Maps) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>We use your location to show nearby places and improve delivery accuracy.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>We use your location to provide accurate pickups and deliveries.</string>

	<!-- Permissions: Camera (Mobile Scanner / QR) -->
	<key>NSCameraUsageDescription</key>
	<string>Camera access is needed to scan QR/barcodes and attach photos.</string>

	<!-- Permissions: Photo Library (File picker / attachments) -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>ParcelExpress needs access to your photo library so you can choose photos or documents to attach to orders (e.g., package photos and proof of delivery). Selected items are uploaded securely to your account and used only to process and support your shipments.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>ParcelExpress saves exported files (such as shipping labels or PDFs) to your photo library only when you explicitly choose to export or download them.</string>

	<!-- Permissions: Contacts (flutter_contacts) -->
	<key>NSContactsUsageDescription</key>
	<string>Contacts access lets you select recipients and speed up parcel entries.</string>

	<!-- Background modes: Firebase Messaging push notifications -->
	<key>UIBackgroundModes</key>
	<array>
		<string>remote-notification</string>
	</array>
</dict>
</plist>
